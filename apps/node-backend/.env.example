# 服务器配置
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# JWT配置
JWT_SECRET=your_jwt_secret_here

# RAG系统配置

# 嵌入服务配置 (SiliconFlow)
EMBEDDING_API_URL=https://api.siliconflow.cn/v1/embeddings
EMBEDDING_API_KEY=xxx
EMBEDDING_MODEL=Pro/BAAI/bge-m3
EMBEDDING_DIMENSION=1024
EMBEDDING_TIMEOUT=30000

# 向量存储配置
# 运行模式:
# - 'simple' (简单向量存储，无需外部依赖，推荐)
# - 'embedded' (嵌入式ChromaDB，无需单独服务器)
# - 'server' (服务器模式ChromaDB，需要启动ChromaDB服务器)
CHROMA_MODE=simple
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION=aiops_knowledge_base
CHROMA_PERSIST_DIR=./chroma_data

# 检索配置
RAG_DEFAULT_TOP_K=3
RAG_DEFAULT_THRESHOLD=0.75
RAG_MAX_TOP_K=10
RAG_MIN_THRESHOLD=0.5

# 知识库配置
RAG_AUTO_INITIALIZE=true
RAG_BACKUP_ENABLED=false
RAG_BACKUP_INTERVAL=86400000

# 日志配置
RAG_LOG_LEVEL=info
RAG_ENABLE_QUERY_LOGGING=false
RAG_ENABLE_PERFORMANCE_LOGGING=false